<UserControl x:Class="WPFValidationDemo.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFValidationDemo.Views"
             xmlns:vm="clr-namespace:WPFValidationDemo.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:ProductViewModel}">
    
    <UserControl.Resources>
        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- 统一样式 -->
        <Style TargetType="TextBlock" x:Key="FieldLabel">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- 错误模板 -->
        <ControlTemplate x:Key="ErrorTemplate">
            <StackPanel>
                <AdornedElementPlaceholder x:Name="placeholder"/>
                <TextBlock Text="{Binding [0].ErrorContent}" 
                           Foreground="Red"
                           FontSize="11"
                           Margin="5,2,0,0"/>
            </StackPanel>
        </ControlTemplate>
        
        <!-- 文本框样式 -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="BorderBrush" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 日期选择器样式 -->
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="BorderBrush" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- ComboBox样式 -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="BorderBrush" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Text="产品信息" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>
        
        <!-- 产品表单 -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Width="450">
                <!-- 产品名称 -->
                <TextBlock Text="产品名称:" Style="{StaticResource FieldLabel}"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>
                
                <!-- 价格 -->
                <TextBlock Text="价格:" Style="{StaticResource FieldLabel}"/>
                <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, StringFormat={}{0:N2}}"/>
                
                <!-- 发布日期 -->
                <TextBlock Text="发布日期:" Style="{StaticResource FieldLabel}"/>
                <DatePicker SelectedDate="{Binding ReleaseDate, ValidatesOnNotifyDataErrors=True}"/>
                
                <!-- 库存数量 -->
                <TextBlock Text="库存数量:" Style="{StaticResource FieldLabel}"/>
                <TextBox Text="{Binding StockLevel, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>
                
                <!-- 类别 -->
                <TextBlock Text="产品类别:" Style="{StaticResource FieldLabel}"/>
                <ComboBox ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding Category, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>
                
                <!-- 描述 -->
                <TextBlock Text="产品描述:" Style="{StaticResource FieldLabel}"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinHeight="80"
                         MaxHeight="120"
                         VerticalScrollBarVisibility="Auto"/>
                
                <!-- 保存结果 -->
                <TextBlock Text="{Binding SaveResult}" 
                           Foreground="Green" 
                           FontWeight="Bold"
                           Margin="0,20,0,10"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="保存" 
                    Command="{Binding SaveCommand}"
                    Padding="20,5" 
                    Margin="0,0,20,0"/>
            <Button Content="重置" 
                    Command="{Binding ResetCommand}"
                    Padding="20,5"/>
        </StackPanel>
    </Grid>
</UserControl> 