<UserControl x:Class="WPFValidationDemo.Views.UserRegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFValidationDemo.Views"
             xmlns:vm="clr-namespace:WPFValidationDemo.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
             xmlns:infra="clr-namespace:WPFValidationDemo.Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:UserRegistrationViewModel}">
    
    <UserControl.Resources>
        <!-- 工具提示错误转换器 -->
        <infra:ValidationErrorsToStringConverter x:Key="ErrorToolTipConverter"/>
        
        <!-- 布尔值转可见性转换器 -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- 统一样式 -->
        <Style TargetType="TextBlock" x:Key="FieldLabel">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- 错误提示样式 -->
        <Style TargetType="TextBlock" x:Key="ErrorMessage">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
        </Style>
        
        <!-- 错误模板 -->
        <ControlTemplate x:Key="ErrorTemplate">
            <StackPanel>
                <AdornedElementPlaceholder x:Name="placeholder"/>
                <TextBlock Foreground="Red"
                           FontSize="11"
                           Margin="5,2,0,0">
                    <TextBlock.Text>
                        <MultiBinding Converter="{StaticResource ErrorToolTipConverter}">
                            <Binding Path="(Validation.Errors)" RelativeSource="{RelativeSource TemplatedParent}"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </ControlTemplate>
        
        <!-- 文本框样式 -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip">
                        <Setter.Value>
                            <MultiBinding Converter="{StaticResource ErrorToolTipConverter}">
                                <Binding RelativeSource="{RelativeSource Self}" Path="(Validation.Errors)"/>
                            </MultiBinding>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 密码框样式 -->
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Password, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Value="{x:Null}">
                    <Setter Property="BorderBrush" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- 日期选择器样式 -->
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip">
                        <Setter.Value>
                            <MultiBinding Converter="{StaticResource ErrorToolTipConverter}">
                                <Binding RelativeSource="{RelativeSource Self}" Path="(Validation.Errors)"/>
                            </MultiBinding>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Text="用户注册" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>
        
        <!-- 注册表单 -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Width="400">
                <!-- 用户名 -->
                <TextBlock Text="用户名:" Style="{StaticResource FieldLabel}"/>
                <TextBox x:Name="UsernameTextBox" 
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"
                         Validation.ErrorTemplate="{StaticResource ErrorTemplate}"/>
                
                <!-- 用户名错误信息 -->
                <TextBlock x:Name="UsernameErrorText"
                           Foreground="Red" 
                           FontSize="11" 
                           Margin="5,0,0,5"
                           Visibility="Collapsed"/>
                
                <!-- 密码 -->
                <TextBlock Text="密码:" Style="{StaticResource FieldLabel}"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Password, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                           Visibility="Collapsed"/>
                
                <!-- 密码错误信息 -->
                <TextBlock x:Name="PasswordErrorText"
                           Foreground="Red" 
                           FontSize="11" 
                           Margin="5,0,0,5"
                           Visibility="Collapsed"/>
                
                <!-- 确认密码 -->
                <TextBlock Text="确认密码:" Style="{StaticResource FieldLabel}"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding ConfirmPassword, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                           Visibility="Collapsed"/>
                
                <!-- 确认密码错误信息 -->
                <TextBlock x:Name="ConfirmPasswordErrorText"
                           Foreground="Red" 
                           FontSize="11" 
                           Margin="5,0,0,5"
                           Visibility="Collapsed"/>
                
                <!-- 邮箱 -->
                <TextBlock Text="电子邮箱:" Style="{StaticResource FieldLabel}"/>
                <TextBox x:Name="EmailTextBox" 
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"
                         Validation.ErrorTemplate="{StaticResource ErrorTemplate}"/>
                
                <!-- 邮箱错误信息 -->
                <TextBlock x:Name="EmailErrorText"
                           Foreground="Red" 
                           FontSize="11" 
                           Margin="5,0,0,5"
                           Visibility="Collapsed"/>
                
                <!-- 出生日期 -->
                <TextBlock Text="出生日期:" Style="{StaticResource FieldLabel}"/>
                <DatePicker SelectedDate="{Binding BirthDate, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"
                            Validation.ErrorTemplate="{StaticResource ErrorTemplate}"/>
                
                <!-- 出生日期错误信息 -->
                <TextBlock x:Name="BirthDateErrorText"
                           Foreground="Red" 
                           FontSize="11" 
                           Margin="5,0,0,5"
                           Visibility="Collapsed"/>
                
                <!-- 服务条款 -->
                <CheckBox x:Name="TermsCheckBox" 
                          Content="我已阅读并同意服务条款" 
                          IsChecked="{Binding AcceptTerms, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"
                          Margin="0,15,0,0"
                          Validation.ErrorTemplate="{StaticResource ErrorTemplate}"/>
                
                <!-- 服务条款错误信息 -->
                <TextBlock x:Name="TermsErrorText"
                           Foreground="Red" 
                           FontSize="11" 
                           Margin="20,0,0,10"
                           Visibility="Collapsed"/>
                
                <!-- 注册结果 -->
                <TextBlock Text="{Binding RegistrationResult}" 
                           Foreground="Green" 
                           FontWeight="Bold"
                           Margin="0,20,0,10"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="注册" 
                    Command="{Binding RegisterCommand}"
                    Padding="20,5" 
                    Margin="0,0,20,0"/>
            <Button Content="重置" 
                    Command="{Binding ResetCommand}"
                    Padding="20,5"/>
        </StackPanel>
    </Grid>
</UserControl> 